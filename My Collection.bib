journal = {Mathematics Education Research Journal},
keywords = {Language,Mathematical terminology,Noticing,Primary mathematics,Reasoning},
number = {4},
pages = {523--544},
publisher = {Mathematics Education Research Journal},
title = {{Primary teachers notice the impact of language on children's mathematical reasoning}},
url = {http://dx.doi.org/10.1007/s13394-016-0178-y},
volume = {28},
year = {2016}
}
