@article{ANDREWSLARSON2019100719,
abstract = {Considerable learning is entailed in adopting an inquiry-oriented approach to teaching an undergraduate mathematics class. In this analysis, we examine classroom video data of three instructors' initial implementation of an inquiry-oriented instructional unit and their implementation of the same unit one year later. We document consistent increases in instances of eliciting and building on student contributions across tasks and instructors. We then leverage Toulmin's argumentation scheme to analyze how classroom discussions became more mathematically robust and student-centered from initial to subsequent implementations. We examine how social and analytic scaffolding provided by the instructor relate to shifts in argumentation. In particular, we posit that shifts in one instructor's framing of mathematical discussion and coordination of social and analytic scaffolding fostered an increase in student contributions to mathematical arguments. Implications for instructor knowledge and learning are discussed.},
author = {Andrews-Larson, Christine and McCrackin, Shelby and Kasper, Valerie},
